<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:padding="24dp"
    tools:context=".RoomJoinActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Room Code"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2D3748"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask the host for the 6-digit code"
        android:textSize="16sp"
        android:textColor="#718096"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutCodeInputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etDigit1"
            style="@style/CodeInputBox" />
        <EditText
            android:id="@+id/etDigit2"
            style="@style/CodeInputBox" />
        <EditText
            android:id="@+id/etDigit3"
            style="@style/CodeInputBox" />
        <EditText
            android:id="@+id/etDigit4"
            style="@style/CodeInputBox" />
        <EditText
            android:id="@+id/etDigit5"
            style="@style/CodeInputBox" />
        <EditText
            android:id="@+id/etDigit6"
            style="@style/CodeInputBox" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invalid Room Code"
        android:textColor="#E53E3E"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutCodeInputs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJoinGame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Join Game"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="#ED8936"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/layoutCodeInputs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

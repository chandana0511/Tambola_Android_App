<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9000000"
    android:padding="24dp"
    tools:context=".RoomCreationActivity">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_person"
        app:tint="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="User Profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Initial State: Create Room Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateRoom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Create a Room"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Room Details State (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layoutRoomDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room Code"
            android:textSize="16sp"
            android:textColor="#D4DCE4" />

        <TextView
            android:id="@+id/tvRoomCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#FBFCFD"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Code"
            android:layout_marginBottom="32dp"
            app:icon="@android:drawable/ic_menu_share" />

        <TextView
            android:id="@+id/tvPlayerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Players Joined: 0"
            android:textSize="20sp"
            android:textColor="#F6F8FB"
            android:layout_marginBottom="40dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartGame"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Start Game"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            android:backgroundTint="#48BB78" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

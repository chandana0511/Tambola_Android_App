<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9000000"
    tools:context=".MainActivity">

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:padding="6dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_person"
        android:contentDescription="Open profile"
        app:tint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Animated Tambola Logo -->
    <ImageView
        android:id="@+id/ivTambolaLogo"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="48dp"
        android:contentDescription="Tambola Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/tambola"
        app:layout_constraintBottom_toTopOf="@+id/btnHost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile" />

    <!-- HOST CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnHost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="80dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#2D3748"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTambolaLogo"
        app:strokeColor="#4FD1C5"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="26dp">

            <ImageView
                android:id="@+id/ivHostIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/host"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tvHostTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Host a Game"
                android:textColor="#E2E8F0"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivHostIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Start the game, call numbers, control the fun."
                android:textColor="#A0AEC0"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvHostTitle"
                app:layout_constraintTop_toBottomOf="@id/tvHostTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- JOIN CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnJoin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="28dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="#F6E05E"
        app:cardBackgroundColor="#2D3748"
        app:layout_constraintTop_toBottomOf="@id/btnHost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="26dp">

            <ImageView
                android:id="@+id/ivJoinIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/players"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvJoinTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Join as Player"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#E2E8F0"
                app:layout_constraintStart_toEndOf="@id/ivJoinIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Get your ticket and chase those winning patterns."
                android:textSize="15sp"
                android:textColor="#A0AEC0"
                app:layout_constraintStart_toStartOf="@id/tvJoinTitle"
                app:layout_constraintTop_toBottomOf="@id/tvJoinTitle"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9000000"
    tools:context=".PlayerActivity">

    <TextView
        android:id="@+id/tvPlayerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Player Zone ðŸŽ«"
        android:textColor="#7B341E"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPlayerCurrentNumber"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPlayerTitle">

        <TextView
            android:id="@+id/tvPlayerCurrentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Start"
            android:textColor="#2D3748"
            android:textSize="24sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvLastCalledNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Waiting for host..."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardPlayerCurrentNumber" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvLastCalledNumber">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Your Ticket"
                android:textColor="#2D3748"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Simplified Ticket Representation -->
            <GridLayout
                android:id="@+id/gridTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alignmentMode="alignMargins"
                android:columnCount="9"
                android:rowCount="3"
                android:useDefaultMargins="true">
                <!-- Cells will be added dynamically or simplified here -->
            </GridLayout>

            <TextView
                android:id="@+id/tvTicketPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#EDF2F7"
                android:gravity="center"
                android:text="Ticket Numbers Loading..." />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardTicket">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btnClaimEarlyFive"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Early Five"
                app:backgroundTint="#1D3CC7"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnClaimFourCorners"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Four Corners"
                app:backgroundTint="#1D3CC7"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnClaimTopLine"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Top Line"
                app:backgroundTint="#1D3CC7"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnClaimMiddleLine"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Middle Line"
                app:backgroundTint="#1D3CC7"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnClaimBottomLine"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Bottom Line"
                app:backgroundTint="#1D3CC7"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnClaimFullHouse"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Full House"
                app:backgroundTint="#1D3CC7"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

<include layout="@layout/view_winner_overlay" />
</androidx.constraintlayout.widget.ConstraintLayout>
